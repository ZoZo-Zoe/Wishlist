<MudPaper Style="padding:0.5rem; margin-bottom: 0.5rem;">
	<MudStack Row=true>

		<MudTooltip Text=@WishListItem.AddedDate.ToShortDateString() Arrow="true" RootClass="d-flex">
			<MudIcon Icon="@Icons.Material.Filled.CalendarMonth" Title="Favorite" Style="margin-top:auto; margin-bottom:auto;" />
		</MudTooltip>

		<MudTextField Label="Name" ReadOnly=true Value=WishListItem.Name Variant="Variant.Outlined" />

		<MudTooltip Text="Open product page" Arrow="true" RootClass="d-flex">
			<MudIconButton Icon=@Icons.Material.Filled.ContentCopy OnClick="()=> LinkClicked(WishListItem)" />
		</MudTooltip>

		<MudDivider Vertical=true Style="height:4rem"></MudDivider>

		<MudTextField Label="Cost" ReadOnly=true Value=WishListItem.Cost Variant="Variant.Outlined" />

		<MudDivider Vertical=true Style="height:4rem"></MudDivider>

		<MudTextField Label="Store" ReadOnly=true Value=WishListItem.StoreName Variant="Variant.Outlined" />

		<MudDivider Vertical=true Style="height:4rem"></MudDivider>

		<MudIconButton Icon=@(_shouldUnfold ? Icons.Material.Filled.KeyboardArrowUp : Icons.Material.Filled.KeyboardArrowDown) Color="Color.Error" OnClick=@(() => _shouldUnfold = !_shouldUnfold) />

	</MudStack>

	@if (_shouldUnfold) {
		<MudStack Row=true Style="margin-top: 0.5rem;">
			<MudDatePicker Label="Added date" ReadOnly=true Date="WishListItem.AddedDate" Variant="Variant.Outlined" DateFormat="dd-MMM-yyyy" />
			<MudDivider Vertical=true Style="height:4rem"></MudDivider>
			<MudTextField Label="Note" ReadOnly=true Value=WishListItem.Notes Variant="Variant.Outlined" />
		</MudStack>

		<MudStack Row=true Style="margin-top: 0.5rem;">
			<MudButton StartIcon=@Icons.Material.Filled.Edit Color="Color.Primary" OnClick=Edit Variant="Variant.Outlined">Edit</MudButton>
			<MudButton StartIcon=@Icons.Material.Filled.Check Color="Color.Success" OnClick=MarkBought Variant="Variant.Outlined">Bought</MudButton>
			<MudButton StartIcon=@Icons.Material.Filled.Warning Color="Color.Error" OnClick=Delete Variant="Variant.Outlined">Delete</MudButton>
		</MudStack>
	}
</MudPaper>